{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/js/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
