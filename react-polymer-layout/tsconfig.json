{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
