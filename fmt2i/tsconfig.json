{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}